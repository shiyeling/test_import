<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Cd" />

    <style name="Cd.CategoryIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Cd.CategoryTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/cd1_text_size_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CD1.TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">@color/cd1_primary_text</item>
        <item name="android:textColorHighlight">?android:attr/textColorHighlight</item>
        <item name="android:textColorHint">@color/cd1_subsidiary_gray_13</item>
        <item name="android:textColorLink">?android:attr/textColorLink</item>
        <item name="android:textSize">@dimen/cd1_text_size_large</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Cd.TranslucentNoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- Note that we use the base animation style here (that is no
             animations) because we really have no idea how this kind of
             activity will be used. -->
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>