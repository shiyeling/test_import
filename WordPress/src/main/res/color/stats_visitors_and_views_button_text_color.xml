<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Not Pressed -->
    <item android:state_checked="false" android:state_pressed="false"  android:state_enabled="true" android:color="@color/calypso_blue_dark" />
    <item android:state_checked="true"  android:state_pressed="false"  android:color="@color/calypso_blue_unread" />

    <!-- Pressed -->
    <item android:state_checked="false" android:state_pressed="true" android:color="@color/calypso_blue_dark" />
    <item android:state_checked="true"  android:state_pressed="true" android:color="@color/calypso_blue_unread" />

</selector>
